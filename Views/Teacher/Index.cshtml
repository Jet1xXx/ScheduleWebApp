@model IEnumerable<ScheduleWebApp.Models.Teacher>

@{
    ViewData["Title"] = "Преподаватели";
}

<h1>Преподаватели</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Добавить нового преподавателя</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Город</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.MiddleName</td>
                <td>@teacher.City?.CityName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = teacher.TeacherId })" class="btn btn-warning">Редактировать</a>
                    <a href="@Url.Action("Delete", new { id = teacher.TeacherId })" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
