@model IEnumerable<ScheduleWebApp.Models.Entities.Teacher.TeacherListItemDto>

@{
    ViewData["Title"] = "Преподаватели";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">@TempData["InfoMessage"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить преподавателя</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ФИО</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Город</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@(string.IsNullOrWhiteSpace(item.CityName) ? "—" : item.CityName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeacherId" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.TeacherId" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
